<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.cristhianbonilla.features_home.ui.home.HomeViewModel" />

        <variable
            name="data"
            type="com.cristhianbonilla.features_home.ui.home.HomeData" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.cristhianbonilla.features_home.ui.home.HomeFragment">

            <com.cristhianbonilla.custom_views.widget.PRToolbar
                android:id="@+id/myCustomToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetRight="0dp"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:toolbar_type="LOGO" />

            <com.cristhianbonilla.custom_views.widget.PRAutocompleteTextView
                android:id="@+id/text_home"
                key_words="@{data.keyWordList}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_size_search"
                android:layout_margin="@dimen/margin_16"
                android:layout_marginTop="16dp"
                android:background="@drawable/autocomplete_input"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:fontFamily="@font/slabo27pxregular"
                android:gravity="center|left"
                android:hint="Buscar por temas"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myCustomToolbar" />

            <com.cristhianbonilla.custom_views.widget.PRRadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_home"
                set_last_years="@{data.lastYears}"
                event_listener="@{viewModel.onYearItemClick}"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
